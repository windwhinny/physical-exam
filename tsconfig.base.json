{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "jsx": "react",
    "lib": [
      "dom.iterable",
      "scripthost",
      "es2017"
    ],
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ]
}
